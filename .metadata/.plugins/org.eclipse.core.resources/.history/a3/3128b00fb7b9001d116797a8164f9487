<?xml version="1.0" encoding="UTF-8"?>

<project default="package" name="tx">
    
    <!--根路径.-->
    
    <property name="rootPath" value="F:/spring-framework-3.2.x/spring-framework-3.2.0.M1"/>
    
    <import file="${rootPath}/src/BaseBuild.xml"/>
    
    <import file="${rootPath}/src/AjBuild.xml"/>

    
    <!--模块名，定义为：模块所在文件夹和输出结果的前缀相同，如spring-core.-->
    
    <property name="moduleName" value="spring-${ant.project.name}"/>
    
    <!--模块路径.-->
    
    <property name="modulePath" value="${rootPath}/${moduleName}"/>

    
    <!--结果根路径.-->
    
    <property name="outputPath" value="${modulePath}/${MY_BUILD}"/>

    
    <!-- 编译输出路径.-->
    
    <property name="binaryPath" value="${outputPath}/bin"/>

    
    <!-- 源文件路径. -->
    
    <property name="srcPath1" value="${modulePath}/src/main/java"/>
    <property name="srcPath2" value="${modulePath}/src/main/resources"/>

    
    <path id="moduleReference">
        <!--1552809705746-->
        <pathelement location="F:/spring-framework-3.2.x/spring-framework-3.2.0.M1/spring-context/${MY_BUILD}/spring-context-3.2.0.M1.jar"/>
        <pathelement location="F:/spring-framework-3.2.x/spring-framework-3.2.0.M1/spring-beans/${MY_BUILD}/spring-beans-3.2.0.M1.jar"/>
        <pathelement location="F:/spring-framework-3.2.x/spring-framework-3.2.0.M1/spring-core/${MY_BUILD}/spring-core-3.2.0.M1.jar"/>
        <!--pathelement location="F:/spring-framework-3.2.x/spring-framework-3.2.0.M1/spring-tx/${MY_BUILD}/spring-tx-3.2.0.M1.jar"/-->
        <pathelement location="F:/spring-framework-3.2.x/spring-framework-3.2.0.M1/spring-aop/${MY_BUILD}/spring-aop-3.2.0.M1.jar"/>
    </path>
    
    <path id="innerReference">
        <!--1552809705746-->
    </path>
    
    <path id="repositoryReference">
        <!--1552809705746-->
        <pathelement location="F:/real/caches/modules-2/files-2.1/javax.resource/connector-api/1.5/a5cee35dc703a9d9ea305cc3f4a2baa7c4919145/connector-api-1.5.jar"/>
        <pathelement location="F:/real/caches/modules-2/files-2.1/aopalliance/aopalliance/1.0/235ba8b489512805ac13a8f9ea77a1ca5ebe3e8/aopalliance-1.0.jar"/>
        <pathelement location="F:/real/caches/modules-2/files-2.1/org.apache.geronimo.specs/geronimo-jta_1.1_spec/1.1/fe8d9046737540d728e4b82cf26dcdd8bf4b0eb1/geronimo-jta_1.1_spec-1.1.jar"/>
        <pathelement location="F:/real/caches/modules-2/files-2.1/com.ibm.websphere/uow/6.0.2.17/df754f8fe0c9c6f837d00ddcc12632fef16ec239/uow-6.0.2.17.jar"/>
        <!--javax.transaction.TransactionManager not found!-->
        <!--org.aopalliance.intercept.MethodInvocation not found!-->
        <!--javax.transaction.Transaction not found!-->
        <pathelement location="F:/real/caches/modules-2/files-2.1/javax.ejb/ejb-api/3.0/d4855ba9a1ecd993b751880567ec06ffcbd6fe06/ejb-api-3.0.jar"/>
        <!--javax.ejb.ApplicationException not found!-->
        <!--org.aopalliance.intercept.MethodInterceptor not found!-->
        <!--javax.ejb.TransactionAttributeType not found!-->
        <!--org.apache.commons.logging.Log not found!-->
        <!--org.apache.commons.logging.LogFactory not found!-->
        <pathelement location="F:/real/caches/modules-2/files-2.1/commons-logging/commons-logging/1.1.1/5043bfebc3db072ed80fbd362e7caf00e885d8ae/commons-logging-1.1.1.jar"/>
    </path>

    
    <!--当前版本串.-->
    
    <property name="version" value="${VERSION}"/>
    
    <!--结果文件名.-->
    
    <property name="result" value="${moduleName}-${version}.jar"/>
    
    <!--结果文件路径.-->
    
    <property name="resultPath" value="${outputPath}/${result}"/>

    
    <target name="compile">
        
        <delete dir="${binaryPath}"/>
        
        <mkdir dir="${binaryPath}"/>
        
        <javac debug="${JAVAC_DEBUG}" destdir="${binaryPath}" encoding="${JAVAC_ENCODING}" failonerror="${JAVAC_FAILONERROR}" includeantruntime="${JAVAC_INCLUDEANTRUNTIME}" includejavaruntime="${JAVAC_INCLUDEJAVARUNTIME}" srcdir="${srcPath1}" verbose="${JAVAC_VERBOSE}">
            
            <classpath refid="moduleReference"/>
            
            <classpath refid="repositoryReference"/>
            
            <classpath refid="innerReference"/>
        
        </javac>
    
    </target>
    
    <target name="package" depends="compile">
        
        <delete file="${resultPath}"/>
        
        <jar basedir="${binaryPath}" compress="false" destfile="${resultPath}">
            
            <manifest>
                
                <attribute name="Implementation-Title" value="${moduleName}"/>
                
                <attribute name="Implementation-Version" value="${version}"/>
            
            </manifest>
            
            <fileset dir="${srcPath1}" includes="**/**">
            </fileset>
            <fileset dir="${srcPath2}" includes="**/**">
            </fileset>
        
        </jar>
        
        <delete dir="${binaryPath}"/>
    
    </target>
</project>